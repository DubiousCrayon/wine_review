<header>Log Entries for <%= link_to(@wine.name, @wine) %></header>
<ol id="log_entries">
  <% @log_entries.each do |log_entry| %>
    <li>
      <span class="log_entry"><%= log_entry.rating %> out of 10</span>
      <span class="user">by <%= log_entry.name %> </span>
      <span class="date">
        <%= time_ago_in_words(log_entry.tasted_on) %> ago
      </span>
      <span class="location">from <%= log_entry.location %> </span>
      <p>
        &quot;<%= log_entry.comments %>&quot;
      </p>
    </li>
  <% end %>
</ol>

<%= link_to 'Write a Log Entry', new_wine_log_entry_path(@wine), 
    remote: true,
    data: { 'update-target' => 'review_form_container' },
    class: 'btn btn-primary' %>

  <div id="review_form_container"></div>

